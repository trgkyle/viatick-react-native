{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@navigation/*": [
        "navigation/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@screens/*": [
        "screens/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/**.tsx",
    "src/**/**.ts",
    "src/navigation/HomeStack.tsx"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json"
}